<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:ignore="HardcodedText"
    tools:context=".foodstall.AuntyJuliaCafeteria">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/foodStallName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aunty Julia Cafeteria"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/foodStallPhoto"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_border"
            android:padding="8dp"
            app:srcCompat="@drawable/aunty_julia_cafeteria_stall" />

        <TextView
            android:id="@+id/foodStallDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Description:"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foodStallDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_border"
            android:padding="8dp"
            android:paddingTop="8dp"
            android:text="@string/aunty_julia_cafeteria_description"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/operatingHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="Operating Hour: 9:00am - 3:00pm (Monday - Friday)"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Menu"
            app:backgroundTint="@color/lavender" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/baseline_more_vert_24"
        app:backgroundTint="@color/lavender"
        app:shapeAppearanceOverlay="@style/RoundedFloatingActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/baseline_location_pin_24"
        app:backgroundTint="@color/lavender"
        app:shapeAppearanceOverlay="@style/RoundedFloatingActionButton"
        app:layout_constraintBottom_toTopOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_discussion_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="144dp"
        app:srcCompat="@drawable/baseline_chat_24"
        app:backgroundTint="@color/lavender"
        app:shapeAppearanceOverlay="@style/RoundedFloatingActionButton"
        app:layout_constraintBottom_toTopOf="@+id/add_location"
        app:layout_constraintEnd_toEndOf="@+id/add_location" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="208dp"
        app:srcCompat="@drawable/baseline_feedback_24"
        app:backgroundTint="@color/lavender"
        app:shapeAppearanceOverlay="@style/RoundedFloatingActionButton"
        app:layout_constraintBottom_toTopOf="@+id/add_discussion_community"
        app:layout_constraintEnd_toEndOf="@+id/add_discussion_community" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>