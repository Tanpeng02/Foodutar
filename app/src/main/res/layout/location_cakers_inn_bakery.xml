<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:ignore="HardcodedText"
    tools:context=".LocationcakersInnBakery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/foodStallName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cakers Inn Bakery"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/foodStallPhoto"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_border"
            android:padding="8dp"
            app:srcCompat="@drawable/cib_8" />

        <TextView
            android:id="@+id/foodStallDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Location:"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cakersource"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textColorHint="@android:color/white"
            android:hint="Current Position">

        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cakerdestination"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textColorHint="@android:color/white"
            android:hint="Destination">

        </EditText>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navigation"
            android:backgroundTint="@color/lavender"
            android:layout_gravity="center"
            android:id="@+id/navigationbutton">

        </Button>
        <TextView
            android:id="@+id/locationid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="Allocated at Block D"
            android:textColor="@android:color/white" />

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>