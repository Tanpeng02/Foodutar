<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainColor"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:text="Feedback"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/foodStallSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/foodStallLabel"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_edittext_whitebackground"
            android:backgroundTint="@android:color/white"
            android:dropDownWidth="250dp"
            android:spinnerMode="dropdown"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/ratingsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodStallSpinner"
            android:layout_marginTop="8dp"
            android:text="Ratings:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingsLabel"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_edittext_whitebackground"
            android:backgroundTint="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">


            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="42dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question1Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cleanliness:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/question1Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/grey"
                    android:progressTint="@color/yellow"
                    android:rating="0"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:secondaryProgressTint="@color/yellow"
                    android:stepSize="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question2Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fair Pricing:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/question2Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/grey"
                    android:progressTint="@color/yellow"
                    android:rating="0"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:secondaryProgressTint="@color/yellow"
                    android:stepSize="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question3Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Staff Friendliness:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/question3Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-28dp"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/grey"
                    android:progressTint="@color/yellow"
                    android:rating="0"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:secondaryProgressTint="@color/yellow"
                    android:stepSize="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question4Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Quality:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/question4Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/grey"
                    android:progressTint="@color/yellow"
                    android:rating="0"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:secondaryProgressTint="@color/yellow"
                    android:stepSize="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question5Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portion Size:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/question5Rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/grey"
                    android:progressTint="@color/yellow"
                    android:rating="0"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:secondaryProgressTint="@color/yellow"
                    android:stepSize="1" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="480dp"
            android:text="Feedback Description:"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="NotSibling"

            />

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="383dp"
            android:layout_height="123dp"
            android:layout_below="@id/descriptionLabel"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_edittext_whitebackground"
            android:backgroundTint="@android:color/white"
            android:inputType="textMultiLine"
            android:lines="4" />

        <Button
            android:id="@+id/submitFeedbackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriptionEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/lavender"
            android:text="Submit Feedback" />

    </RelativeLayout>


</LinearLayout>

